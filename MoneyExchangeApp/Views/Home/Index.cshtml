@model MoneyExchangeViewModel

<div class="container ">
    <form asp-action="AddAnnouncement" method="post" class="form-horizontal" role="form" enctype="multipart/form-data">
        <div class="row">

            <div class="form-group  mb-3">
                <label class="control-label" asp-for="ExchangeHistory.FromAmount"></label>
                <div>
                    <input class="form-control" type="text" placeholder="Default input" asp-for="ExchangeHistory.FromAmount">
                </div>
            </div>

            <div class="col-md-3">
                <select class="form-control" asp-for="Rates" asp-items="@(new SelectList(Model.Rates))">
                </select>
            </div>

            <div class="form-group  mb-3">
                <label class="control-label" asp-for="ExchangeHistory.ToAmount"></label>
                <div>
                    <input class="form-control" type="text" placeholder="Default input" asp-for="ExchangeHistory.ToAmount">
                </div>
            </div>

            <div class="dropdown show col-md-3">
                <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Dropdown link
                </a>

                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                    <a class="dropdown-item" href="#">CA</a>
                    <a class="dropdown-item" href="#">USA</a>
                    <a class="dropdown-item" href="#">MEX</a>
                </div>
            </div>
        </div>

        <div>
            <button type="button" class="btn btn-primary">Primary</button>
        </div>
    </form>
</div>